{
  "name": "zenn-url-to-linkcard",
  "publisher": "daifukuninja",
  "displayName": "URL to Linkcard for Zenn markdown",
  "description": "%extension.description%",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.77.0"
  },
  "icon": "assets/icon.png",
  "homepage": "https://github.com/daifukuninja/zenn-url-to-linkcard/blob/main/README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/daifukuninja/zenn-url-to-linkcard.git"
  },
  "bugs": {
    "url": "https://github.com/daifukuninja/zenn-url-to-linkcard/issues"
  },
  "license": "SEE LICENSE IN `LICENSE` file.",
  "categories": [
    "Snippets",
    "Other"
  ],
  "keywords": [
    "zenn",
    "zenn.dev",
    "github.dev",
    "markdown"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "zenn-url-to-linkcard.fromClipboard",
        "title": "%command.fromClipboard.title%"
      },
      {
        "command": "zenn-url-to-linkcard.fromSelection",
        "title": "%command.fromSelection.title%"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorFocus",
          "command": "zenn-url-to-linkcard.fromClipboard",
          "group": "myGroup@1"
        },
        {
          "when": "editorFocus",
          "command": "zenn-url-to-linkcard.fromSelection",
          "group": "myGroup@2"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "jest"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/is-url": "^1.2.30",
    "@types/jest": "^29.5.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.77.0",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.36.0",
    "glob": "^8.1.0",
    "jest": "^29.5.0",
    "mocha": "^10.2.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.5",
    "webpack": "^5.76.3",
    "webpack-cli": "^5.0.1"
  },
  "dependencies": {
    "generator-code": "^1.7.5",
    "is-url": "^1.2.4"
  }
}
